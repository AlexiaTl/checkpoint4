{% extends 'base.html.twig' %}

{% block title %}Wild Circus - Circus Acts{% endblock %}

{% block body %}
    <h1 class="mx-5 my-5">Circus Acts</h1>

    <div class="container">
        <table class="table table-hover my-5">
            <thead>
                <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                {% for panel in panels %}
                <tr>
                <td>{{panel.name}}</td>
                <td>{{panel.description}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>


    <a href="{{ path('home') }}" class="mx-5 my-5 back-link">
      Back to homepage
    </a>

{% endblock %}